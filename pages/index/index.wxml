<!--index.wxml-->
<view wx:if="{{ swiperList.length }}" class="swiper-content">
  <swiper 
  bindchange="onSwiperChange" 
  autoplay="true" 
  interval="3000"
  circular="true">
    <swiper-item wx:for="{{ swiperList }}" wx:key="index">
      <image 
      bindtap="onSwiperTap" 
      data-item="{{ item }}"
      mode="aspectFill" 
      src="{{ item.image_url }}"></image>
    </swiper-item>
  </swiper>
  <view class="dots">
    <view class="dot {{current == index ? 'active' : ''}}" wx:for="{{ swiperList }}" wx:key="index"></view>
  </view>
</view>
<view class="memer-area">
  <view class="vip-box">
    <image src="../../assets/images/vip-pic.png"></image>
    <view class="meta">
      <view class="title">微雪花会员</view>
      <view class="progress-bar">
        <progress-bar value="{{ 33 }}"></progress-bar>
      </view>
      <view class="tips">再升一级可享【升级礼包】等6项目权益</view>
    </view>
  </view>
  <view class="coin-box">
    <image mode="aspectFill" src="../../assets/images/coin.png"></image>
    <view class="currency">51</view>
  </view>
</view>
