/**index.wxss**/
.index .swiper-content {
  width: 100vw;
  height: 680rpx;
  position: relative;
}

.index .swiper-content swiper {
  height: 100%;
}

.index .swiper-content swiper swiper-item {
  width: 100%;
  height: 100%;
}

.index .swiper-content swiper swiper-item image {
  width: 100%;
  height: 100%;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}

.index .swiper-content .dots {
  display: flex;
  position: absolute;
  left: 50rpx;
  bottom: 50rpx;
}

.index .swiper-content .dots .dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 4rpx;
  background-color: #fff;
  margin-right: 3px;
  opacity: 0.5;
  transition: all 0.2s;
}

.index .swiper-content .dots .dot.active {
  width: 29rpx;
  opacity: 1;
}
